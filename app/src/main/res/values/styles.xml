<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 기본 텍스트 스타일 -->
    <style name="CustomTextStyle">
        <item name="android:fontFamily">@font/pretendard_regular</item> <!-- 폰트 파일 지정 -->
    </style>

    <!-- 버튼 기본 스타일 -->
    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button">
        <!-- 버튼 배경 색상 -->
        <item name="android:background">@drawable/outline</item>

        <!-- 버튼 텍스트 색상 -->
        <item name="android:textColor">@color/black</item>

        <!-- 버튼 폰트 -->
        <item name="android:fontFamily">@CustomTextStyle</item>

        <!-- 버튼의 텍스트 크기 -->
        <item name="android:textSize">16sp</item>

        <!-- 버튼의 패딩 -->
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>


    <!-- 앱 전체에 적용할 기본 스타일 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- 텍스트 스타일 적용-->
        <item name="android:textViewStyle">@style/CustomTextStyle</item>
        <item name="android:buttonStyle">@style/CustomButtonStyle</item>
        <item name="android:editTextStyle">@style/CustomTextStyle</item>

        <!-- 액션바 배경 색상 -->
        <item name="colorPrimary">@color/primary_ver2</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/primary</item>

        <!-- 액션바 텍스트 색상 -->
        <item name="android:textColorPrimary">@color/black</item>
    </style>
</resources>
